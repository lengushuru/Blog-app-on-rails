<h1>All Posts</h1>

<div>
  <% if @user.photo.present? %>
    <div><%= image_tag(@user.photo, width: 100) %></div>
  <% end %> 
  <h2><%= @user.name %></h2>
  <p><%= @user.posts_counter %></p>
</div>

<% @posts.each do |post| %>
  <div>
    <%= link_to user_post_path(@user, post) do %>
      <h2><%= post.title %></h2>
    <% end %>
    <p><%= post.text %></p>
    <h3>Comments: <%= post.comments_counter %>, Likes: <%= post.likes_counters %></h3>
    <% post.latest_commments.each do |comment| %>
      <h3><%= comment.author.name %>: <%= comment.text %></h3>
    <% end %>
  </div>
<% end %>

<button><%= link_to 'Add new Post', new_user_post_path(@current_user) %></button>

<div>
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>">
      <%= value %>
    </div>
  <% end %>
</div>
<diV>
<button>Pagination</button>
</div>