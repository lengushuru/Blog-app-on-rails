<div id="<%= dom_id post %>">
  <p>
    <strong>Authorid:</strong>
    <%= post.AuthorId %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= post.Title %>
  </p>

  <p>
    <strong>Text:</strong>
    <%= post.Text %>
  </p>

  <p>
    <strong>Createdat:</strong>
    <%= post.CreatedAt %>
  </p>

  <p>
    <strong>Updatedat:</strong>
    <%= post.UpdatedAt %>
  </p>

  <p>
    <strong>Commentscounter:</strong>
    <%= post.CommentsCounter %>
  </p>

  <p>
    <strong>Likescounter:</strong>
    <%= post.LikesCounter %>
  </p>

</div>
